{
  "name": "@eatonfyi/base",
  "version": "0.1.0",
  "description": "Common config for eatonfyi node/typescript projects",
  "engines": {
    "node": "^20.10.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "/dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "run": "node --import=tsimp src/index.ts",
    "build": "shx rm -rf dist; pkgroll --minimize",
    "format": "prettier --config prettier.config.js 'src/**/*.ts' --write",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "test": "ava",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eaton/base"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/node": "^20.12.12",
    "ava": "^6.1.2",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "pkgroll": "^2.0.2",
    "prettier": "^3.2.5",
    "shx": "^0.3.3",
    "tsimp": "^2.0.11",
    "typedoc": "^0.25.12",
    "typescript": "^5.4.2",
    "typescript-eslint": "^7.9.0"
  }
}
